{
    "designSystem": {
      "name": "HealthyRecipeUI",
      "theme": {
        "mode": "light",
        "primaryColor": "#6AE28D",
        "secondaryColors": ["#B7E2FF", "#FFD6E0", "#D4C4FF"],
        "backgroundColor": "#F9FAFC",
        "surfaceColor": "#FFFFFF",
        "accentColors": {
          "calories": "#B4F18F",
          "carbohydrates": "#B7E2FF",
          "protein": "#FFB9B9",
          "fats": "#FFE3B3"
        },
        "textColor": {
          "primary": "#000000",
          "secondary": "#808080",
          "inverse": "#FFFFFF"
        },
        "shadow": {
          "card": "0px 10px 20px rgba(0, 0, 0, 0.05)"
        }
      },
      "typography": {
        "fontFamily": "'Poppins', sans-serif",
        "heading": {
          "fontSize": "22px",
          "fontWeight": "600",
          "lineHeight": "130%"
        },
        "subheading": {
          "fontSize": "18px",
          "fontWeight": "500",
          "lineHeight": "130%"
        },
        "body": {
          "fontSize": "16px",
          "fontWeight": "400",
          "lineHeight": "140%"
        },
        "label": {
          "fontSize": "14px",
          "fontWeight": "500",
          "lineHeight": "130%"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "130%"
        }
      },
      "components": {
        "header": {
          "style": "minimal",
          "elements": ["profilePhoto", "welcomeText", "notificationIcon"]
        },
        "searchBar": {
          "borderRadius": "12px",
          "padding": "12px 16px",
          "icon": "search",
          "background": "#FFFFFF"
        },
        "recipeCard": {
          "borderRadius": "20px",
          "padding": "16px",
          "imagePlacement": "left",
          "gradientOverlay": true,
          "tagColors": ["#B7E2FF", "#FFD6E0", "#C9F4C8"]
        },
        "bottomNav": {
          "background": "#FFFFFF",
          "elevation": true,
          "activeColor": "#000000",
          "inactiveColor": "#BDBDBD",
          "buttons": ["home", "statistic", "profile"]
        },
        "detailHeader": {
          "background": "#E6F2FF",
          "roundedCorners": "top",
          "icon": "more options"
        },
        "nutrientChart": {
          "type": "donut",
          "colorScheme": "category-based",
          "centerLabel": "7 days"
        },
        "tagFilter": {
          "style": "pill",
          "backgroundColors": ["#C1F7E3", "#FFEBE5", "#F3F0FF"],
          "textColor": "#000000"
        }
      },
      "buttons": {
        "default": {
          "background": "#000000",
          "textColor": "#FFFFFF",
          "borderRadius": "14px",
          "padding": "14px 24px",
          "fontWeight": "600"
        },
        "outlined": {
          "background": "transparent",
          "border": "1px solid #000000",
          "textColor": "#000000"
        }
      },
      "spacing": {
        "xxs": "4px",
        "xs": "8px",
        "sm": "12px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px"
      },
      "borderRadius": {
        "small": "10px",
        "medium": "14px",
        "large": "20px",
        "pill": "999px"
      },
      "iconography": {
        "style": "outlined",
        "color": "#000000",
        "size": "24px"
      },
      "grid": {
        "columns": 12,
        "gutter": "16px",
        "breakpoints": {
          "mobile": "375px",
          "tablet": "768px",
          "desktop": "1024px"
        }
      },
      "animation": {
        "hoverEffect": "subtleScale",
        "transitions": "ease-in-out 0.3s"
      },
      "imagery": {
        "style": "bright, vivid, and circular cropped",
        "imageRatio": "1:1"
      }
    }
  }
  